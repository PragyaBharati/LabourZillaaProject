@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="color:white">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark"style="color:white"><i class="fa fa-sign-out" aria-hidden="true">Logout</i></button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link " style="color:white" asp-area="Identity" asp-page="/Account/Register"><i class="fa fa-registered" aria-hidden="true">Register</i></a>
    </li>
    <li class="nav-item">
        <a class="nav-link " style="color:white" asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-sign-in" aria-hidden="true">Login</i></a>
    </li>
}
</ul>
